<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.otams">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Otams">

        <activity
            android:name=".ui.home.TutorHome"
            android:exported="false" />
        <activity
            android:name=".ui.home.StudentHome"
            android:exported="false" />
        <activity
            android:name=".ui.LauncherActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LandingPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.LoginPage"
            android:exported="true" />
        <activity
            android:name=".ui.auth.RegisterPage"
            android:exported="true" />
        <activity
            android:name=".ui.admin.AdministratorPage"
            android:exported="true" />
        <activity
            android:name=".ui.registration.TutorRegistrationPage"
            android:exported="true" />
        <activity
            android:name=".ui.registration.StudentRegistrationPage"
            android:exported="true" />
        <activity
            android:name=".ui.registration.PendingPage"
            android:exported="true" />
        <activity
            android:name=".ui.registration.RejectedPage"
            android:exported="true" />
        <activity
            android:name=".ui.registration.ApprovedPage"
            android:exported="true" />
        <activity
            android:name=".ui.admin.RejectedRequestsPage"
            android:exported="true" />
    </application>

</manifest>
